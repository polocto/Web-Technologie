#!/usr/bin/env node

const axios = require('axios')
const app = require('../lib/app')
const db = require('../lib/db/db')
const config = {
  port: 3001
};

let users = [{
  username: "polocto",
  email: process.env.TEST_PAYLOAD_EMAIL,
  lastName: "Sade",
  firstName: "Paul"
},{
  username: "mathisCAMARD",
  email: "mathis.camard@edu.ece.fr",
  lastName: "Camard",
  firstName: "Mathis"
},{
  username: "aliceCbx",
  email: "alice.combernoux@edu.ece.fr",
  lastName: "Combernoux",
  firstName: "Alice"
},{
  username: "snow",
  email: "neige.jumeau@edu.ece.fr",
  lastName: "Jumeau",
  firstName: "Neige"
},{
  username: "clemoctohub",
  email: "clement.fages@edu.ece.fr",
  lastName: "Fages",
  firstName: "Clément"
},
];

let channels = [
  {
    name: "Channel 1",
    profileImage: "../img/lol.png",
    users: []
  },
  {
    name: "Channel 2",
    profileImage: "../img/lol.png",
    users: []
  }
];

(async function() {
  await db.admin.clear();
  app.listen(config.port);

  try
  {
    users = await Promise.all(users.map((async u => {
        const {data:user} = await axios.post(`http://localhost:${config.port}/users`, u);
        return new Promise((resolve,reject)=>{
          resolve(user);
        });
    })));
    channels[0].users.push(users[0].id); 
    channels[0].users.push(users[1].id);
    users.map(user => {
      channels[1].users.push(user.id);
    });

    channels.map(channel => {
      console.log(channel);
    })
    
    //Paul send invitation to Mathis
      await axios.post(`http://localhost:${config.port}/users/${users[0].id}/contacts/${users[1].id}`);
    //Mathis accept invitation of Paul
      await axios.post(`http://localhost:${config.port}/users/${users[1].id}/contacts/${users[0].id}`);
    //Paul send an invitation to Alice
      await axios.post(`http://localhost:${config.port}/users/${users[0].id}/contacts/${users[2].id}`);
    //Neige send an invitation to Paul
      await axios.post(`http://localhost:${config.port}/users/${users[3].id}/contacts/${users[1].id}`);
    //Neige send an invitation to Clément
      await axios.post(`http://localhost:${config.port}/users/${users[3].id}/contacts/${users[4].id}`);
    //Clément accept an invitation to Neige
      await axios.post(`http://localhost:${config.port}/users/${users[4].id}/contacts/${users[3].id}`);
    ////
    //Alice send an invitation to Clément
      await axios.post(`http://localhost:${config.port}/users/${users[2].id}/contacts/${users[4].id}`);
    //Clément accept an invitation to Alice
      await axios.post(`http://localhost:${config.port}/users/${users[4].id}/contacts/${users[2].id}`);
    //////
    //Mathis send an invitation to Clément
      await axios.post(`http://localhost:${config.port}/users/${users[1].id}/contacts/${users[4].id}`);
    //Clément accept an invitation to Mathis
      await axios.post(`http://localhost:${config.port}/users/${users[4].id}/contacts/${users[1].id}`);
    //////
    //Paul send an invitation to Clément
      await axios.post(`http://localhost:${config.port}/users/${users[0].id}/contacts/${users[4].id}`);
    //Clément accept an invitation to Paul
      await axios.post(`http://localhost:${config.port}/users/${users[4].id}/contacts/${users[0].id}`);
      //update users
      
      //Paul creates a channel with Mathis
      await axios.post(`http://localhost:${config.port}/users/${users[0].id}/channels`,channels[0]);
      //Clément create a channel whith everyone
      await axios.post(`http://localhost:${config.port}/users/${users[4].id}/channels`,channels[1]);
      
      users = await Promise.all(users.map((async u => {
        const {data:user} = await axios.get(`http://localhost:${config.port}/users/${u.id}`);
        return new Promise((resolve,reject)=>{
          resolve(user);
        });
      })));
      users.map(user=>{
        console.log(user);
      })
      
    {
       const {data: channel} = await axios.get(`http://localhost:${config.port}/users/${users[0].id}/channels/${users[0].channels[0]}`);
      channels[0] = channel;
    }
    {
      const {data: channel} = await axios.get(`http://localhost:${config.port}/users/${users[0].id}/channels/${users[0].channels[1]}`);
      channels[1] = channel;
    }
    channels.map(channel=>{
      console.log(channel);
    })

    //write messages
    await axios.post(`http://localhost:${config.port}/users/${users[0].id}/channels/${users[0].channels[1]}/messages`,{content: 'saluttt'});
    await axios.post(`http://localhost:${config.port}/users/${users[4].id}/channels/${users[0].channels[1]}/messages`,{content: 'tg'});
    await axios.post(`http://localhost:${config.port}/users/${users[4].id}/channels/${users[0].channels[1]}/messages`,{content: 'salut* pardon correction auto'});
    await axios.post(`http://localhost:${config.port}/users/${users[2].id}/channels/${users[0].channels[1]}/messages`,{content: 'on se retrouve pour travailler le projet de web ?'});
    await axios.post(`http://localhost:${config.port}/users/${users[3].id}/channels/${users[0].channels[1]}/messages`,{content: 'ouais grave chaud'});
    await axios.post(`http://localhost:${config.port}/users/${users[1].id}/channels/${users[0].channels[1]}/messages`,{content: 'ok'});
    await axios.post(`http://localhost:${config.port}/users/${users[2].id}/channels/${users[0].channels[1]}/messages`,{content: 'cool'});
    await axios.post(`http://localhost:${config.port}/users/${users[0].id}/channels/${users[0].channels[1]}/messages`,{content: 'NON JE VEUX PAS JE PREFERE TRAVAILLER DEVOPS'});
    await axios.post(`http://localhost:${config.port}/users/${users[3].id}/channels/${users[0].channels[1]}/messages`,{content: 'tkt on travaillera après'});
    await axios.post(`http://localhost:${config.port}/users/${users[4].id}/channels/${users[0].channels[1]}/messages`,{content: 'WEBTECHHHH'});
    await axios.post(`http://localhost:${config.port}/users/${users[0].id}/channels/${users[0].channels[1]}/messages`,{content: 'AAAAAA DEVOPSSSS'});
    await axios.post(`http://localhost:${config.port}/users/${users[4].id}/channels/${users[0].channels[1]}/messages`,{content: 'WEBTECHHHHH MA VIE'});
    
    const {data: messages} = await axios.get(`http://localhost:${config.port}/users/${users[0].id}/channels/${users[0].channels[1]}/messages`);


    messages.map(message => {
      console.log(message);
    })
  }
  catch(err){
    console.log(err)
  }

  process.exit()
})();
